{
  "manifest_version": 2,
  "name": "Funn",
  "version": "1.0",
  "description": "Extension for Finn.no",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {

      "matches": ["*://*.finn.no/*"],
      "js": [
        "prototypes/components.js",
        "core/storage-manager.js",
        "core/component-dispatcher.js",
        "base/settings-button.js",
        "base/settings-page.js",
        "modules/scroll-top.js",
        "modules/map-viewer.js",
        "modules/square-meters.js",
        "main.js"],
      "css": ["modules/css/scroll-top.css"]
    }
  ]
}
