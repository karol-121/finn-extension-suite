{
  "manifest_version": 2,
  "name": "Funn",
  "version": "1.0",
  "description": "Extension for Finn.no",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.finn.no/*"],
      "js": [
        "base/component-dispatcher.js",
        "base/extension-link.js",
        "base/extension-config.js",
        "components/scrollToTop.js",
        "components/mapViewer.js",
        "components/squareMeters.js",
        "main.js"],
      "css": ["components/css/scrollToTop.css"]
    }
  ]
}
