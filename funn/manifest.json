{
  "name": "Funn",
  "description": "Extension for Finn.no",
  "manifest_version": 2,
  "version": "2.0",

  "permissions": ["storage"],

  "background": {
    "scripts": ["background/core.js"]
  },

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.finn.no/*"],
      "js": [
        "base/settings-modal.js",
        "base/settings-button.js",
        "modules/scroll-top.js",
        "modules/square-meters.js",
        "foreground/component-dispatcher.js",
        "foreground/main.js"
      ],

      "css": [
        "modules/css/scroll-top.css"
      ]
    }
  ]
}
